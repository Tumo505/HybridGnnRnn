{
  "model": {
    "hidden_dim": 1024,
    "num_layers": 4,
    "num_attention_heads": 16,
    "embedding_dim": 512,
    "dropout": 0.15,
    "bidirectional": true,
    "use_attention": true,
    "use_residual": true
  },
  "num_epochs": 200,
  "batch_size": 4,
  "learning_rate": 0.001,
  "weight_decay": 0.0001,
  "betas": [
    0.9,
    0.999
  ],
  "eps": 1e-08,
  "optimizer": "adamw",
  "scheduler": "cosine",
  "scheduler_params": {
    "T_0": 20,
    "T_mult": 2,
    "eta_min": 1e-06,
    "factor": 0.5,
    "patience": 10
  },
  "loss_weights": {
    "differentiation": 1.0,
    "cell_type": 0.3,
    "smoothness": 0.1
  },
  "max_grad_norm": 1.0,
  "mixed_precision": true,
  "early_stopping_patience": 30,
  "n_top_genes": 3000,
  "num_workers": 8,
  "pin_memory": true,
  "log_interval": 50,
  "save_interval": 10,
  "log_dir": "experiments"
}